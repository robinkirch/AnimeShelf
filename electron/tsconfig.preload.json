{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": ".", 
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "typeRoots": ["./node_modules/@types", "./electron/types"]
  },
  "include": [
    "preload.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}