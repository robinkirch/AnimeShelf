
{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "es2020",
    "outDir": ".", 
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["../src/*"] 
    },
    "typeRoots": ["../node_modules/@types"] 
  },
  "include": ["*.ts"], 
  "exclude": ["node_modules"]
}

