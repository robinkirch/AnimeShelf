
{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "es2020",
    "outDir": ".", 
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["../src/*"] // Adjusted path to src for type imports
    },
    "typeRoots": ["./node_modules/@types", "../node_modules/@types"] // For better-sqlite3 types
  },
  "include": ["*.ts"], // This will include main.ts, preload.ts, database.ts
  "exclude": ["node_modules"]
}
